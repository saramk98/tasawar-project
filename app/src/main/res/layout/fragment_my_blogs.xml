<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MyBlogs">

    <RelativeLayout
        android:id="@+id/actbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#FFFFFF"
        >
        <RelativeLayout
            android:id="@+id/first"
            android:layout_alignParentEnd="true"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/serc"
                android:hint="@android:string/search_go">
            </EditText>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/second"
        android:layout_below="@+id/actbar"
        android:layout_width="370dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blogger Buzz"
            android:textColor="#286DB5"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/text2"
            android:layout_below="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blogger Buzz"
            android:textColor="#000000"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/text3"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textColor="#000000"
            android:textSize="16dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/third"
        android:layout_below="@+id/second"
        android:layout_width="370dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textt1"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blogger Buzz"
            android:textColor="#286DB5"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/textt2"
            android:layout_below="@+id/textt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blogger Buzz"
            android:textColor="#000000"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/textt3"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textColor="#000000"
            android:textSize="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/forth"
        android:layout_below="@+id/third"
        android:layout_width="370dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/texttt1"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blogger Buzz"
            android:textColor="#286DB5"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/texttt2"
            android:layout_below="@+id/texttt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blogger Buzz"
            android:textColor="#000000"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/texttt3"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/texttt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textColor="#000000"
            android:textSize="16dp"/>
    </RelativeLayout>



</RelativeLayout>